<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnalyticActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Uber Analytic"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAnalytics_PeakHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top 3 Peak Hours During Day"
        app:layout_constraintBottom_toTopOf="@id/btnAnalytics_PickUpDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/btnAnalytics_PickUpDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top 3 Pick-Up Streets"
        app:layout_constraintBottom_toTopOf="@id/btnAnalytics_PickUpTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAnalytics_PeakHours" />

    <Button
        android:id="@+id/btnAnalytics_PickUpTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top 3 Picked Streets by Time"
        app:layout_constraintBottom_toTopOf="@id/btnAnalytics_DestStat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAnalytics_PickUpDay" />
    <Button
        android:id="@+id/btnAnalytics_DestStat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination Status"
        app:layout_constraintBottom_toTopOf="@id/btnAnalytics_DestCoord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAnalytics_PickUpTime" />
    <Button
        android:id="@+id/btnAnalytics_DestCoord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top 3 Destination Coordinates"
        app:layout_constraintBottom_toTopOf="@id/btnAnalytics_ClassAM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAnalytics_DestStat" />
    <Button
        android:id="@+id/btnAnalytics_ClassAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Class Am"
        app:layout_constraintBottom_toTopOf="@id/btnAnalytics_ClassPM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAnalytics_DestCoord" />
    <Button
        android:id="@+id/btnAnalytics_ClassPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Class PM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAnalytics_ClassAM" />

</androidx.constraintlayout.widget.ConstraintLayout>